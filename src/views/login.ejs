 <div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Area de Login</h1>
      <p class="text-center lead">
         Faça login ou Cadastro
        </p>
         <%- include('includes/messeges'); %>
      
      <!-- Registro  -->
      <div class="row">
        <div class="col-lg my-5">
          <h4> Faça seu Cadastro</h4>
          <p>se você ainda não tem conta,preencha</p>
          
          <!--  form Register -->
          <form  class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
          <div class="form-group">
             <label for="exampleInputEmail1">Digite seu E-mail:</label>
             <input type="email" class="form-control" name="email" placeholder="Enter email">
          </div>
          <div class="form-group">
             <label for="exampleInputEmail1">Digite uma senha:</label>
             <input type="password" class="form-control" name="password" placeholder="Confirme sua senha">
          </div>
         <div class="form-group form-check">
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
         </div>
    </form>
    </div>
    
        <!-- login  -->
    <div class="col-lg" my-5>
        <h4> Faça seu login </h4>
        <p> Se você ja tem uma conta,faça login abaixo :</p>
         <form class="form-login" action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>">
        <div class="form-group">
        <label for="exampleInputEmail1">Email:</label>
        <input type="email" class="form-control" name="email" placeholder="digite seu Email">
         </div>
         <div class="form-group">
        <label for="exampleInputPassword1">Senha:</label>
        <input type="password" class="form-control" name="password" id="exampleInputPassword1" placeholder="Digite sua senha">
         </div>
    <div class="form-group form-check">

    </div>
    <button type="submit" class="btn btn-primary"> Entrar</button>
    </form>
  </div>
